<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="bike.Views.EventsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Events">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ClearCommand}" Text="Clear" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Label
                Margin="5"
                FontSize="Large"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                IsVisible="{Binding HasLogs, Converter={StaticResource Not}}"
                Text="This will display a live feed of events as they are logged"
                VerticalOptions="FillAndExpand"
                VerticalTextAlignment="Center" />
            <ListView
                IsVisible="{Binding HasLogs}"
                ItemsSource="{Binding Logs}"
                RefreshCommand="{Binding LoadCommand}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Command="{Binding PrimaryCommand}"
                            Detail="{Binding Detail}"
                            Text="{Binding Text}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>