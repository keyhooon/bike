<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage
    x:Class="bike.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:commands="clr-namespace:bike.Commands"
    xmlns:image="clr-namespace:bike.Assets.Images"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True">
    <MasterDetailPage.Resources>
        <Color x:Key="Transparent">Transparent</Color>
        <x:String x:Key="hum">&#xe5d2;</x:String>
        <!--  Style for Images  -->
        <Style x:Key="menuIconStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}" />
            <Setter Property="Margin" Value="10,0,5,0" />
            <Setter Property="HeightRequest" Value="28" />
        </Style>
        <Style x:Key="menuLableStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        </Style>

    </MasterDetailPage.Resources>

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout HorizontalOptions="StartAndExpand">
                <Grid>
                    <Image
                        Aspect="Fill"
                        HeightRequest="150"
                        Source="{image:ImageResource bike.Assets.Images.NavyBlueGradient.jpeg}" />
                    <Image
                        Margin="10,5"
                        Aspect="AspectFit"
                        HorizontalOptions="FillAndExpand"
                        Source="{image:ImageResource bike.Assets.Images.logo.png}"
                        VerticalOptions="End" />
                </Grid>

                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Dashboard"
                    ImageSource="{image:ImageResource bike.Assets.Images.dashboard.png}"
                    Text="Dashboard" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Dashboard"
                    ImageSource="{image:ImageResource bike.Assets.Images.pin.png}"
                    Text="Map" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Settings"
                    ImageSource="{image:ImageResource bike.Assets.Images.tools.png}"
                    Text="diagnostic" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Settings"
                    ImageSource="{image:ImageResource bike.Assets.Images.analysis.png}"
                    Text="Logs" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Settings"
                    ImageSource="{image:ImageResource bike.Assets.Images.bars.png}"
                    Text="Reports" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Settings"
                    ImageSource="{image:ImageResource bike.Assets.Images.settings.png}"
                    Text="Settings" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Configurations"
                    ImageSource="{image:ImageResource bike.Assets.Images.gears.png}"
                    Text="Configurations" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Settings"
                    ImageSource="{image:ImageResource bike.Assets.Images.analysis.png}"
                    Text="Logs" />

                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/ContactUs"
                    ImageSource="{image:ImageResource bike.Assets.Images.about.png}"
                    Text="Contact Us" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/AboutUs"
                    ImageSource="{image:ImageResource bike.Assets.Images.about.png}"
                    Text="About Us" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Nav/Help"
                    ImageSource="{image:ImageResource Ebike.Assets.Images.question.png}"
                    Text="Help" />

            </StackLayout>

        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>