<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage
    x:Class="bike.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:image="clr-namespace:bike.Assets"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True">
    <MasterDetailPage.Resources>
        <Color x:Key="Transparent">Transparent</Color>
        <x:String x:Key="hum">&#xe5d2;</x:String>
        <!--  Style for Images  -->
        <Style x:Key="menuIconStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}" />
            <Setter Property="Margin" Value="10,0,5,0" />
            <Setter Property="HeightRequest" Value="28" />
        </Style>
        <Style x:Key="menuLableStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        </Style>

    </MasterDetailPage.Resources>

    <MasterDetailPage.Master>
        <ContentPage Title="Menu" BackgroundColor="LightGray">
            <Grid HeightRequest="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Image
                    Aspect="Fill"
                    HeightRequest="200"
                    Source="NavyBlueGradient.jpeg" />
                <Image
                    Margin="10,5"
                    Aspect="AspectFit"
                    HorizontalOptions="FillAndExpand"
                    Source="{image:ImageResource bike.Assets.Images.logo.png}"
                    VerticalOptions="End" />
                <ScrollView Grid.Row="1">
                    <StackLayout Spacing="0">
                        <StackLayout.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Padding" Value="30,0" />
                                <Setter Property="HeightRequest" Value="60" />
                            </Style>
                        </StackLayout.Resources>
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Dashboard"
                            ImageSource="{image:ImageResource bike.Assets.Menu.dashboard.png}"
                            Text="Dashboard" />
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Settings"
                            ImageSource="{image:ImageResource bike.Assets.Menu.setting.png}"
                            Text="Settings" />

                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Settings"
                            ImageSource="{image:ImageResource bike.Assets.Menu.bar.png}"
                            Text="Reports" />

                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Settings"
                            ImageSource="{image:ImageResource bike.Assets.Menu.tools.png}"
                            Text="diagnostic" />
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Logs?selectedTab=EventsPage"
                            ImageSource="{image:ImageResource bike.Assets.Menu.list.png}"
                            Text="Logs" />
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Configurations"
                            ImageSource="{image:ImageResource bike.Assets.Menu.gears.png}"
                            Text="Configurations" />
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/ContactUs"
                            ImageSource="{image:ImageResource bike.Assets.Menu.phone.png}"
                            Text="Contact Us" />
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/AboutUs"
                            ImageSource="{image:ImageResource bike.Assets.Menu.people.png}"
                            Text="About Us" />
                        <Button
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Help"
                            ImageSource="{image:ImageResource bike.Assets.Menu.help.png}"
                            Text="Help" />
                    </StackLayout>
                </ScrollView>
            </Grid>



        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>