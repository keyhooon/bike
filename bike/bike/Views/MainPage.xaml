<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="bike.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:bike.Behaviors"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:commands="clr-namespace:bike.Commands"
    xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
    xmlns:navigationdrawer="clr-namespace:Syncfusion.SfNavigationDrawer.XForms;assembly=Syncfusion.SfNavigationDrawer.XForms"
    xmlns:prism="http://prismlibrary.com"
    xmlns:sfavatar="clr-namespace:Syncfusion.XForms.AvatarView;assembly=Syncfusion.Core.XForms"
    prism:ViewModelLocator.AutowireViewModel="True">
    <ContentPage.Resources>
        <commands:ToggleDrawerCommand x:Key="toggleDrawerCommand" />
        <!--  Style for Images  -->
        <Style TargetType="iconize:IconImage">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="IconSize" Value="20" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="WidthRequest" Value="28" />
        </Style>
        <Style x:Key="menuLableStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="HeightRequest" Value="32" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <navigationdrawer:SfNavigationDrawer x:Name="navigationDrawer">
            <navigationdrawer:SfNavigationDrawer.ContentView>
                <Grid x:Name="mainContentView" BackgroundColor="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackLayout BackgroundColor="#1aa1d6" Orientation="Horizontal">
                        <button:SfButton
                            x:Name="menuButton"
                            BackgroundColor="#1aa1d6"
                            Command="{StaticResource toggleDrawerCommand}"
                            CommandParameter="{x:Reference navigationDrawer}"
                            FontSize="20"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            Visual="Material"
                            WidthRequest="50">
                            <button:SfButton.Content>
                                <iconize:IconButton
                                    BackgroundColor="Transparent"
                                    FontSize="20"
                                    Text="md-dehaze"
                                    TextColor="White"
                                    WidthRequest="48" />
                            </button:SfButton.Content>
                        </button:SfButton>
                        <Label
                            x:Name="headerLabel"
                            BackgroundColor="#1aa1d6"
                            FontSize="16"
                            HeightRequest="50"
                            HorizontalTextAlignment="Center"
                            Text="Home"
                            TextColor="White"
                            VerticalTextAlignment="Center" />
                    </StackLayout>
                    <ContentView Grid.Row="1">
                        <Label
                            x:Name="contentLabel"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="Content View"
                            TextColor="Black"
                            VerticalOptions="Center" />
                    </ContentView>
                </Grid>
            </navigationdrawer:SfNavigationDrawer.ContentView>
            <navigationdrawer:SfNavigationDrawer.DrawerHeaderView>
                <Grid BackgroundColor="{StaticResource PrimaryColor}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <sfavatar:SfAvatarView
                        Grid.Row="1"
                        Margin="10,0"
                        AvatarCharacter="Avatar10"
                        ContentType="AvatarCharacter"
                        CornerRadius="25"
                        HeightRequest="50"
                        HorizontalOptions="StartAndExpand"
                        WidthRequest="50" />
                    <Label
                        Grid.Row="2"
                        Margin="10,0"
                        FontSize="40"
                        HorizontalOptions="StartAndExpand"
                        Text="EV-Tech"
                        TextColor="White" />

                </Grid>
            </navigationdrawer:SfNavigationDrawer.DrawerHeaderView>
            <navigationdrawer:SfNavigationDrawer.DrawerContentView>
                <StackLayout Padding="0,10,0,20" HorizontalOptions="StartAndExpand">
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateDashboard}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-dashboard" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Home" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateSetting}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-settings" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Settings" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateConfiguration}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-tune" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Configurations" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-timeline" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Logs" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-error" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Diagnostic" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateContactUs}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-call" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Contact Us" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateAboutUs}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-info" />
                                <Label Style="{StaticResource menuLableStyle}" Text="About Us" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateFeedback}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-record-voice-over" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Feedback" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                    <button:SfButton BackgroundColor="Transparent" Command="{Binding NavgateHelp}">
                        <button:SfButton.Content>
                            <StackLayout Orientation="Horizontal">
                                <iconize:IconImage Icon="md-help" />
                                <Label Style="{StaticResource menuLableStyle}" Text="Help" />
                            </StackLayout>
                        </button:SfButton.Content>
                    </button:SfButton>
                </StackLayout>
            </navigationdrawer:SfNavigationDrawer.DrawerContentView>
        </navigationdrawer:SfNavigationDrawer>



    </ContentPage.Content>

</ContentPage>