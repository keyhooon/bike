<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage
    x:Class="bike.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:image="clr-namespace:bike.Assets"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True">
    <MasterDetailPage.Resources>
        <Color x:Key="Transparent">Transparent</Color>
        <x:String x:Key="hum">&#xe5d2;</x:String>
        <!--  Style for Images  -->
        <Style x:Key="menuIconStyle" TargetType="Label">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="FontFamily" Value="{StaticResource MaterialIcons}" />
            <Setter Property="Margin" Value="10,0,5,0" />
            <Setter Property="HeightRequest" Value="28" />
        </Style>
        <Style x:Key="menuLableStyle" TargetType="Label">
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="HeightRequest" Value="32" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        </Style>

    </MasterDetailPage.Resources>

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
                <Grid HeightRequest="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Image Aspect="Fill" HeightRequest="200" Source="{image:ImageResource bike.Assets.Images.NavyBlueGradient.jpeg}" />
                    <Image
                        Margin="10,5"
                        Aspect="AspectFit"
                        HorizontalOptions="FillAndExpand"
                        Source="{image:ImageResource bike.Assets.Images.logo.png}"
                        VerticalOptions="End" />
                <ScrollView Grid.Row="1">
                    <StackLayout Spacing="0">
                        <Button  HeightRequest="48"
                            x:Name="button" 
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Dashboard"
                            ImageSource="{image:ImageResource bike.Assets.Menu.circulargauge.png}"
                            Text="Dashboard" />
                        <Button  HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Map"
                            ImageSource="{image:ImageResource bike.Assets.Menu.map.png}"
                            Text="Map" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Settings"
                            ImageSource="{image:ImageResource bike.Assets.Menu.tools.png}"
                            Text="diagnostic" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Logs"
                            ImageSource="{image:ImageResource bike.Assets.Menu.list.png}"
                            Text="Logs" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Settings"
                            ImageSource="{image:ImageResource bike.Assets.Menu.bar.png}"
                            Text="Reports" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Settings"
                            ImageSource="{image:ImageResource bike.Assets.Menu.setting.png}"
                            Text="Settings" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Configurations"
                            ImageSource="{image:ImageResource bike.Assets.Menu.gears.png}"
                            Text="Configurations" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/ContactUs"
                            ImageSource="{image:ImageResource bike.Assets.Menu.phone.png}"
                            Text="Contact Us" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/AboutUs"
                            ImageSource="{image:ImageResource bike.Assets.Menu.people.png}"
                            Text="About Us" />
                        <Button HeightRequest="48"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Nav/Help"
                            ImageSource="{image:ImageResource bike.Assets.Menu.help.png}"
                            Text="Help" />
                    </StackLayout>
                </ScrollView>
                </Grid>



        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>