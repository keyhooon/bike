<?xml version="1.0" encoding="UTF-8" ?>

<ContentView
    x:Class="bike.Controls.SkColorDispersionMap.SessionMap"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:forms="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    xmlns:syncMap="clr-namespace:Syncfusion.SfMaps.XForms;assembly=Syncfusion.SfMaps.XForms">
    <ContentView.Content>
        <Grid RowSpacing="0">

            <syncMap:SfMaps x:Name="Map">
                <syncMap:SfMaps.Layers>
                    <syncMap:ImageryLayer
                        x:Name="Layer"
                        CanCacheTiles="True"
                        GeoCoordinateChanged="ImageryLayer_GeoCoordinateChanged"
                        LayerType="OSM"
                        ZoomLevelChanging="ImageryLayer_ZoomLevelChanging" />
                </syncMap:SfMaps.Layers>
            </syncMap:SfMaps>
            <forms:SKCanvasView
                x:Name="MapOverlay"
                Grid.Row="0"
                InputTransparent="True"
                PaintSurface="MapOnPaintSurface" />
        </Grid>
    </ContentView.Content>
</ContentView>